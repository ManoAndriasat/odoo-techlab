<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hospital_nurse_views_action" model="ir.actions.act_window">
        <field name="name">nurse</field>
        <field name="res_model">hospital.nurse</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="hospital_nurse_form_view" model="ir.ui.view">
        <field name="name">hospital.nurse.form</field>
        <field name="model">hospital.nurse</field>
        <field name="arch" type="xml">
            <form string="Nurse">
                <sheet>
                    <group>
                        <field name="user_id"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
